<h1>Listing drugs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Name key</th>
      <th>Company</th>
      <th>Phase</th>
      <th>Last modified</th>
      <th>Change date</th>
      <th>Added date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @drugs.each do |drug| %>
      <tr>
        <td><%= drug.name %></td>
        <td><%= drug.name_key %></td>
        <td><%= drug.company %></td>
        <td><%= drug.phase %></td>
        <td><%= drug.last_modified %></td>
        <td><%= drug.change_date %></td>
        <td><%= drug.added_date %></td>
        <td><%= link_to 'Show', drug %></td>
        <td><%= link_to 'Edit', edit_drug_path(drug) %></td>
        <td><%= link_to 'Destroy', drug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

