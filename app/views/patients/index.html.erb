<h1>Listing patients</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= patient.first_name %></td>
        <td><%= patient.last_name %></td>
        <td><%= patient.address %></td>
        <td><%= patient.city %></td>
        <td><%= patient.state %></td>
        <td><%= patient.zip %></td>
        <td><%= link_to 'Show', patient ,class: 'label label-success' %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient), class: 'label label-primary'%></td>
        <td><%= link_to 'Destroy', patient, class: 'label label-warning', method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Patient', new_patient_path, class: 'btn btn-primary' %>
<%= link_to 'Home', root_path, class: 'btn btn-info' %>
