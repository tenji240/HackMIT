<%= nested_form_for(@patient) do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <p><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</p>
      <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-section-left">
    <div class="form-group">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :address %><br>
      <%= f.text_field :address, class: 'form-control' %>
    </div>
  </div>

  <div class="form-section-right">
    <div class="form-group">
      <%= f.label :city %><br>
      <%= f.text_field :city, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :state %><br>
      <%= f.text_field :state, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :zip %><br>
      <%= f.text_field :zip, class: 'form-control' %>
    </div>
  </div>

  <% f.fields_for :symptoms do |builder| %>
    <div class="form-group">
      <%= builder.label :name, "Symptom Name" %>
      <%= builder.text_field :name, class: 'form-control symptom-control' %>
      <br>
      <%= builder.link_to_remove "Remove this Symptom", class: 'btn btn-warning' %>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.link_to_add "Add Symptom", :symptoms, class: 'btn btn-default' %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
